<?xml version="1.0"?>
<config>
    <modules>
        <Rakuten_Connector>
            <version>1.0.0</version>
        </Rakuten_Connector>
    </modules>
    <global>
        <fieldsets>
            <sales_convert_quote_address>
                <rakutenfee_amount>
                    <to_order>*</to_order>
                </rakutenfee_amount>
                <base_rakutenfee_amount>
                    <to_order>*</to_order>
                </base_rakutenfee_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <payment>
            <groups>
                <connector>Connector</connector>
            </groups>
        </payment>
        <sales>
            <quote>
                <totals>
                    <connector_rakutenfee>
                        <class>rakuten_connector/rakutenpay/quote_address_total_rakutenfee</class>
                        <after>grand_total</after>
                    </connector_rakutenfee>
                </totals>
            </quote>
        </sales>
        <blocks>
            <rakuten_connector>
                <class>Rakuten_Connector_Block</class>
            </rakuten_connector>
        </blocks>
        <models>
            <rakuten_connector>
                <class>Rakuten_Connector_Model</class>
            </rakuten_connector>
        </models>
        <helpers>
            <connector>
                <class>Rakuten_Connector_Helper</class>
            </connector>
        </helpers>
        <events>
            <resource_get_tablename>
                <observers>
                    <rakuten_connector>
                        <class>Rakuten_Connector_Model_Observer</class>
                        <method>addAutoloader</method>
                    </rakuten_connector>
                </observers>
            </resource_get_tablename>
        </events>
        <template>
            <email>
                <payment_connector_rakutenpay_template translate="label" module="connector">
                    <label>RakutenPay - Abandoned Transactions</label>
                    <file>sales/rakutenpay_abandoned.html</file>
                    <type>html</type>
                </payment_connector_rakutenpay_template>
            </email>
        </template>
        <resources>
            <rakuten_connector_rakutenpay_setup>
                <setup>
                    <module>Rakuten_Connector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </rakuten_connector_rakutenpay_setup>
            <connector_rakutenpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </connector_rakutenpay_write>
            <connector_rakutenpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </connector_rakutenpay_read>
        </resources>
    </global>
    <admin>
        <routers>
            <connector>
                <use>admin</use>
                <args>
                    <module>Rakuten_Connector</module>
                    <frontName>connector</frontName>
                </args>
            </connector>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <mage_adminhtml>
                    <files>
                        <connector>Rakuten_Connector.csv</connector>
                    </files>
                </mage_adminhtml>
            </modules>
        </translate>
        <menu>
            <connetor_menu translate="title" module="connector">
                <title>Rakuten Connector</title>
                <sort_order>1000</sort_order>
                <children>
                    <connector_rakutenpay_configuration translate="title" module="connector">
                        <title>Configura&#xE7;&#xE3;o</title>
                        <action>adminhtml/system_config/edit/section/payment/</action>
                        <sort_order>2000</sort_order>
                    </connector_rakutenpay_configuration>
                    <connector_rakutenpay_refund translate="title" module="connector">
                        <title>Estorno</title>
                        <action>connector/rakutenpay/adminhtml_refund</action>
                        <sort_order>2100</sort_order>
                    </connector_rakutenpay_refund>
                </children>
            </connetor_menu>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <connector_rakutenpay_adminform>
                                    <title>Connector</title>
                                </connector_rakutenpay_adminform>
                            </children>
                        </catalog>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <connector>
                    <file>rakuten/rakutenpay.xml</file>
                </connector>
            </updates>
        </layout>
        <events>
            <sales_order_grid_collection_load_before>
                <observers>
                    <rakuten_connector>
                        <model>rakuten_connector/rakutenpay/observer</model>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </rakuten_connector>
                </observers>
            </sales_order_grid_collection_load_before>
            <admin_system_config_changed_section_payment>
                <observers>
                    <rakuten_connector>
                        <model>rakuten_connector/rakutenpay/observer</model>
                        <method>adminSystemConfigPaymentSave</method>
                    </rakuten_connector>
                </observers>
            </admin_system_config_changed_section_payment>
            <sales_order_save_after>
                <observers>
                    <rakuten_connector_rakutenpay>
                        <model>rakuten_connector/rakutenpay/observer</model>
                        <method>adminOrderAfterSave</method>
                    </rakuten_connector_rakutenpay>
                </observers>
            </sales_order_save_after>
            <payment_method_is_active>
                <observers>
                    <paymentfilter_payment_method_is_active>
                        <model>rakuten_connector/rakutenpay/observer</model>
                        <method>adminFilterPaymentMethod</method>
                    </paymentfilter_payment_method_is_active>
                </observers>
            </payment_method_is_active>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <rakutenpay>
                <use>standard</use>
                <args>
                    <module>Rakuten_Connector</module>
                    <frontName>connector</frontName>
                </args>
            </rakutenpay>
        </routers>
        <layout>
            <updates>
                <connector>
                    <file>rakuten/rakutenpay.xml</file>
                </connector>
            </updates>
        </layout>
    </frontend>
    <default>
        <payment>
            <connector_rakutenpay_credit_card>
                <active>0</active>
                <model>Rakuten_Connector_Model_RakutenPay_CreditCard</model>
                <title>Cart&#xE3;o de Cr&#xE9;dito</title>
                <group>connector</group>
                <minimum_installment>10.00</minimum_installment>
                <sort_order>2</sort_order>
            </connector_rakutenpay_credit_card>
            <connector_rakutenpay_boleto>
                <active>0</active>
                <model>Rakuten_Connector_Model_RakutenPay_Boleto</model>
                <title>Boleto Banc&#xE1;rio</title>
                <group>connector</group>
                <expiration>10</expiration>
                <sort_order>3</sort_order>
            </connector_rakutenpay_boleto>
        </payment>
    </default>
</config>

