<?xml version="1.0"?>
<layout>
    <sales_order_grid_update_handle>
        <reference name="sales_order.grid">
             <action method="addColumnAfter" ifconfig="payment/rakutenpay_boleto/active">
                <columnId>payment_method</columnId>
                <arguments>
                    <header>Código da Transação</header>
                    <index>payment_code</index>
                    <header_css_class>a-center</header_css_class>
                    <align>center</align>
                    <filter_index>payment.transaction_code</filter_index>
                    <type>text</type>
                </arguments>
                <after>real_order_id</after>
            </action>
            <action method="addColumnAfter" ifconfig="payment/rakutenpay_credit_card/active">
                <columnId>payment_method</columnId>
                <arguments>
                    <header>Código da Transação</header>
                    <index>payment_code</index>
                    <header_css_class>a-center</header_css_class>
                    <align>center</align>
                    <filter_index>payment.transaction_code</filter_index>
                    <type>text</type>
                </arguments>
                <after>real_order_id</after>
            </action>
        </reference>
        <reference name="sales_order.grid">
            <action method="addColumnAfter" ifconfig="payment/rakutenpay_boleto/active">
                <columnId>payment_environment</columnId>
                <arguments>
                    <header>Ambiente</header>
                    <index>payment_environment</index>
                    <header_css_class>a-center</header_css_class>
                    <align>center</align>
                    <filter_index>payment.environment</filter_index>
                    <type>text</type>
                </arguments>
                <after>payment_method</after>
            </action>
            <action method="addColumnAfter" ifconfig="payment/rakutenpay_credit_card/active">
                <columnId>payment_environment</columnId>
                <arguments>
                    <header>Ambiente</header>
                    <index>payment_environment</index>
                    <header_css_class>a-center</header_css_class>
                    <align>center</align>
                    <filter_index>payment.environment</filter_index>
                    <type>text</type>
                </arguments>
                <after>payment_method</after>
            </action>
        </reference>
    </sales_order_grid_update_handle>
    <adminhtml_sales_order_grid>
        <update handle="sales_order_grid_update_handle" />
    </adminhtml_sales_order_grid>
    <adminhtml_sales_order_index>
        <update handle="sales_order_grid_update_handle" />
    </adminhtml_sales_order_index>
    <adminhtml_sales_order_view>
        <reference name="order_totals">
            <block type="adminhtml/sales_order_totals_item" name="rakutenfee" template="rakuten/connector/rakutenpay/rakutenfee/total.phtml" />
        </reference>
    </adminhtml_sales_order_view>
    <rakutenpay_adminhtml_refund_index>
        <reference name="head">
            <action method="addCss"><stylesheet>rakuten/connector/rakutenpay/css/rakutenpay-module.css</stylesheet></action>
            <action method="addCss"><stylesheet>rakuten/connector/rakutenpay/css/rakutenpay-modal.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>rakuten/connector/rakutenpay/js/jquery-1.11.1.js</name><params/><if/></action>
            <action method="addItem"><type>skin_js</type><name>rakuten/connector/rakutenpay/js/jquery.inputmask.bundle.js</name></action>
            <action method="addItem"><type>skin_js</type><name>rakuten/connector/rakutenpay/js/rakutenpay-module.js</name><params/><if/></action>
            <action method="addItem"><type>skin_js</type><name>rakuten/connector/rakutenpay/js/jquery.colorbox-min.js</name><params/><if/></action>
            <action method="addItem"><type>skin_js</type><name>rakuten/connector/rakutenpay/js/jquery.dataTables.js</name><params/><if/></action>
        </reference>
        <reference name="content">
            <block type="adminhtml/store_switcher" name="store_switcher" template="store/switcher.phtml" />
            <block type="adminhtml/template" name="refund" template="rakuten/connector/rakutenpay/refund.phtml"/>
        </reference>
    </rakutenpay_adminhtml_refund_index>
</layout>