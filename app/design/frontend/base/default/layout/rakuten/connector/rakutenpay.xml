<?xml version="1.0"?>
<layout version="0.1.0">
    <rakutenpay_payment_direct>
        <remove name="left"/>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/rakutenpay-module.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/rakutenpay-modal.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/styles.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>rakuten/connector/rakutenpay/js/rakutenpay-module.js</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>rakuten/connector/rakutenpay/js/jquery.colorbox-min.js</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>rakuten/connector/rakutenpay/js/vanilla-masker.min.js</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
    </rakutenpay_payment_direct>

    <rakutenpay_payment_success>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkout/onepage_success" name="checkout.success" template="checkout/success.phtml"/>
            <block type="page/html" name="direct" template="rakuten/connector/rakutenpay/direct/success.phtml"/>
        </reference>
    </rakutenpay_payment_success>

    <rakutenpay_payment_error>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="page/html" name="direct" template="rakuten/connector/rakutenpay/payment-error.phtml"/>
        </reference>
    </rakutenpay_payment_error>

    <rakutenpay_payment_default>
        <remove name="left"/>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/rakutenpay-module.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/rakutenpay-modal.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/styles.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>rakuten/connector/rakutenpay/js/rakutenpay-module.js</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <script>rakuten/connector/rakutenpay/js/jquery.colorbox-min.js</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="rakuten_connector/rakutenpay_payment" name="payment" template="rakuten/connector/rakutenpay/default/payment.phtml"/>
        </reference>
    </rakutenpay_payment_default>

    <rakutenpay_payment_payment>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate">
                <template>page/empty.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="rakuten_connector/rakutenpay_return" name="return" template="rakuten/connector/rakutenpay/return.phtml"/>
        </reference>
    </rakutenpay_payment_payment>

    <rakutenpay_payment_payment>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="rakuten_connector/rakutenpay_error" name="error" template="rakuten/connector/rakutenpay/error.phtml"/>
        </reference>
    </rakutenpay_payment_payment>

    <checkout_onepage_index translate="label">
        <reference name="head">
            <block type="rakuten_connector/rakutenpay_payment" name="loading" template="rakuten/connector/rakutenpay/loading.phtml"/>
        </reference>
    </checkout_onepage_index>

    <catalog_product_view>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <script>rakuten/connector/rakutenpay/css/installments.css</script>
                <params>                    <![CDATA[media="all"]]></params>
            </action>
        </reference>

        <reference name="product.info.addtocart">
            <block type="core/template" name="rakutenpay.installments.table" template="rakuten/connector/rakutenpay/installments.phtml" after="-"/>
        </reference>
    </catalog_product_view>

    <sales_order_view>
        <reference name="order_totals">
            <block type="rakuten_connector/rakutenpay_sales_order_rakutenfee" name="rakutenfee" />
        </reference>
    </sales_order_view>
</layout>
